/* pages/firstout/firstout.wxss */

page {
  background: #f6f6f6;
  height: 100%;
  /* display: flex;
    flex-direction: column;
    justify-content: flex-start;  */
  position: relative;
}

.tabbar {
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  background-color: white;
}

/*firsttop begin  */
.clom{
  position: absolute;
  left: 50%;
  top: 56rpx;
  width: 2rpx;
  background-color: white;
  height: 130rpx;
}
.firstTop {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 238rpx;
  background-color: #ff4033;
}

.crow {
  padding-top: 111rpx;
  flex: 1;
}

.crow view {
  text-align: center;
  color: white;
}

/*firsttop end   */

.secondBox {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 120rpx;
  background-color: white;
  margin-bottom: 5rpx;
}

.secondBox view {
  align-self: center;
  color: #7c7c7c;
}

.littleRed {
  margin: 0 30rpx;
  width: 10rpx;
  align-self: center;
  background-color: #ff4033;
  height: 44rpx;
  border-radius: 10rpx;
}

/*listbox start */

.listbox {
  width: 100%;
  height: 200rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.firstTime {
  flex: 1;
}

.listAll {
  flex: 2;
  display: flex;
  flex-direction: row;
}

.listAllLeft {
  text-align: center;
  flex: 1;
  flex-direction: column;
  display: flex;
}

.listAllConter {
  text-align: center;
  flex: 1;
}

.listAllRight {
  background-color: rgb(255, 121, 122);
  color: white;
  text-align: center;
  flex: 1;
  height: 50rpx;
  border-radius: 10rpx;
  margin-right:20rpx;
}

/*listbox end  */

/* tabbar start */

.tabbar {
  display: flex;
  flex-direction: row;
}

.tabbarBox {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.tabbarBox-2 {
  flex: 1;
  text-align: center;
}

.tabbarBox-2 image {
  position: absolute;
  bottom: 42rpx;
  margin-top: 2rpx;
  margin-left: -55rpx;
  width: 115rpx;
  height: 115rpx;
}

.tabbarBox-2 view {
  position: absolute;
  bottom: 0;
  font-size: 26rpx;
  color: #7c7c7c;
  padding-left: 74rpx;
}

.tabbarBox image {
  padding-top: 2rpx;
  padding-left: 95rpx;
  width: 60rpx;
  height: 60rpx;
}

.tabbarBox view {
  font-size: 26rpx;
  color: #7c7c7c;
}

/* tabbar end */
