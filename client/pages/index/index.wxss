/**index.wxss**/

page {
  background: #f6f6f6;
  height: 100%;
  /* display: flex;
    flex-direction: column;
    justify-content: flex-start;  */
  position: relative;
}

/*top begin  */

.top {
  height: 290rpx;
  background-color: white;
}

.body {
  height: 230rpx;
  margin-top: 20rpx;
  background: white;
}

.tabbar {
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  background-color: white;
}

.topBox {
  padding-left: 30rpx;
  padding-top: 50rpx;
  display: flex;
  flex-direction: row;
}

.topLittleBOX-1 {
  font-size: 30rpx;
  color: #4c4c4c;
}

.topLittleBOX-2 {
  padding-left: 50rpx;
  display: flex;
  flex-direction: row;
}

.row-1 {
   width: 305rpx; 
  height: 30rpx;
  background-color: #3edd24;
  border-radius: 20rpx;
}

.row-2 {
   width: 380rpx; 
  height: 30rpx;
  background-color: #dd2446;
  border-radius: 20rpx;
}

.row-3 {
   width: 95rpx; 
  height: 30rpx;
  background-color: #ddc124;
  border-radius: 20rpx;
}

.rowText {
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #4c4c4c;
}

/*top end  */

/*body start */

.body {
  margin-bottom: 28rpx;
  display: flex;
  flex-direction: row;
}

.iconBox {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.iconBox image {
  padding-left: 95rpx;
  padding-top: 30rpx;
  width: 70rpx;
  height: 100rpx;
}

.iconBox view {
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #ff4033;
}

/*body end */
/* bottom start */
.span{
  height: 80rpx;
  margin-top: 2rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}
.span view{
align-self:center;
}
.textBox{
  padding-left: 14rpx;
  width: 270rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
  color: #7c7c7c;
}
.spanIcon{
  margin-left: 30rpx;
  text-align: center;
  width: 60rpx;
  height: 30rpx;
  border-radius: 10rpx;
  border: 1px solid #ff4033;
  font-size: 20rpx;
  color: #ff4033; 
}
.incomIcon{
  margin-left: 30rpx;
  text-align: center;
  width: 60rpx;
  height: 30rpx;
  border-radius: 10rpx;
  border: 1px solid #3edd24;
  font-size: 20rpx;
  color: #3edd24;
}

.right{
  position: absolute;
  right: 10rpx;
  color: #ff4033;
}
.timeSpan{
  padding-left: 50rpx;
  font-size: 26rpx;
  color: #7c7c7c;
}




/* bottom end */

/* tabbar start */

.tabbar {
  display: flex;
  flex-direction: row;
}

.tabbarBox {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
}
.tabbarBox-2{
    flex: 1;
  text-align: center;
} 
.tabbarBox-2 image {
  position: absolute;
  bottom: 42rpx;
  margin-top: 2rpx;
  margin-left: -55rpx;
  width: 115rpx;
  height: 115rpx;
}
.tabbarBox-2 view {
  position: absolute;
  bottom: 0;
  font-size: 26rpx;
  color: #7c7c7c;
  padding-left:74rpx;

}

.tabbarBox image {
  padding-top: 2rpx;
  padding-left: 95rpx;
  width: 60rpx;
  height: 60rpx;
}

.tabbarBox view {
  font-size: 26rpx;
  color: #7c7c7c;
}


/* tabbar end */
